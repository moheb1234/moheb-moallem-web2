<!DOCTYPE html>

<title>Edit Room</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

{% block body %}
    <div class="bg-dark text-white p-2">
        {{ knp_menu_render('main') }}
    </div>
    <h3 class="ms-5 mt-3"> Edit Room:</h3>
    <div class="m-5 p-5 container">
        <form method="post" class="mt-4">
            <label for="1" class="h5"> Number Of Beds:</label>
            <input id="1" type="number" name="num_of_bed" class="form-control" value="{{ room.numOfBeds }}"
                   required=required>
            <br>
            <label class="h5" for="2">Is Empty:</label>
            <input id="2" type="checkbox" name="is_empty">
            <br><br>
            <input type="submit" class="btn btn-primary">
        </form>
    </div>
{% endblock %}
